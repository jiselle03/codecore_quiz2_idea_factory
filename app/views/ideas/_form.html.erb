<%= form_with(model: @idea, local: true) do |f|%>
<div>
    <% if @idea.errors.present?%>
    <%= @idea.errors.full_messages.join(', ')%>
    <% end %>
</div>
<div>
    <%= f.label :title%><br>
    <%= f.text_field :title %>
</div>
<div>
    <%= f.label :description %><br>
    <%= f.text_area :description, cols: 50, rows:5%>
    
</div>

<br>
    <%= f.submit %>

<% end %>